<div class = "homebottomportion">
  <div class ="container">
    <h1 class = "text-center" id = "tagline">Welcome to TrekRecs!</h1>
    <a name="learnmore"></a>
    <h3 class = "text-center">
      The easiest way to collect and organize trip recommendations from your family and friends.
    </h3>

  <div class = "row-fluid autocenter">

      <div class = "howto span4 text-center">
        <h4>1. Post the details of your trip and the types of recommendations you need</h4>
            <i class="icon-map-marker howtoicon"></i>
            <i class="icon-plane howtoicon"></i>
            <i class="icon-suitcase howtoicon"></i>
      </div>

      <div class = "howto span4 text-center">
        <h4>2. Tell your network you need recommendations</h4>
              <i class="icon-linkedin-sign howtoicon"></i>
              <i class="icon-twitter-sign howtoicon"></i>
              <i class="icon-facebook-sign howtoicon"></i>
       </div>

       <div class = "howto span4 text-center">
        <h4>3. Sit back, relax, and watch the recommendations come</h4>
              <i class="icon-comments-alt howtoicon"></i>
       </div>
  </div>
  </div>
  <div class = "row-fluid">

       <div class = "howto span3 offset3 text-center">
        <h4>4. View all your recommendations in ONE spot</h4>
              <i class="icon-glass howtoicon"></i>
              <i class="icon-food howtoicon"></i>
       </div>

       <div class = "howto span3 text-center">
        <h4>5. Receive an organized email with all your recommendations the day before your trip</h4>
              <i class="icon-envelope-alt howtoicon"></i>
       </div>
  </div>

  <!-- MODAL BELOW -->

    <a href="#myModal" role="button" class="btn btn-primary btn-large modalbutton" data-toggle="modal">SIGN UP</a>
    <div id = "oppositehome">
      <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">SIGN UP</h3>
        </div>
        <div class="modal-body">
        <p>
          <%= form_tag users_url, method: "post" do %>
            <fieldset>
              <div class="row-fluid">
                <div class="center">
                  <%= text_field_tag :first_name, nil, placeholder: "First Name" %>
                </div>
              </div>
              <div class="row-fluid">
                <div class="center">
                  <%= text_field_tag :last_name, nil, placeholder: "Last Name" %>
                </div>
              </div>
              <div class="row-fluid">
                <div class="center">
                  <%= email_field_tag :email, nil, placeholder: "Email" %>
                </div>
              </div>
              <div class="row-fluid">
                <div class="center">
                  <%= password_field_tag :password, nil, placeholder: "Password" %>
                </div>
              </div>
              <div class="row-fluid">
                <div class="center">
                  <%= password_field_tag :password_confirmation, nil, placeholder: "Password confirmation" %>
                </div>
              </div>

              <div class="row-fluid">
                <div class="center">
                  <%= submit_tag "Create Account", class: "btn btn-primary" %>
                </div>
              </div>
            </fieldset>
          <% end %>
        </p>

        </div>
        <div class="modal-footer">
          <button class="btn btn-inverse" data-dismiss="modal" aria-hidden="true">Close</button>
          <!-- <button class="btn btn-primary">Save changes</button> -->
        </div>
      </div>
    </div>

<!-- MODAL ABOVE -->
</div>

