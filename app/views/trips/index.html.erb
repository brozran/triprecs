    <div class="feed text-center">

    <h1>Give Trip Recommendations</h1>

        <!-- START OF LOOP BELOW -->

    <% @trips.each do |trip| %>

        <!-- INDIVIDUAL TRIP IS BELOW -->
    <div class = "trip">
        <h2><%= link_to trip.trip_name, trip_recs_url(trip) %></h2>
        <h4><b><%= @trip_owner.find_by_id(trip.userid).first_name %>
          <%= @trip_owner.find_by_id(trip.userid).last_name %></b></h4>

          <% trip.trip_details.each do |details| %>

             <div><b><%= details.city_or_region %>:</b>  <%= details.recommendation_needs %></div>

           <%end%>

          <%= link_to 'Update Details   |', trip_url(trip) if current_user.present? && trip.userid == current_user.id %>

          <%= link_to 'Edit Trip Name   |', edit_trip_url(trip) if current_user.present? && trip.userid == current_user.id %>

          <%= link_to 'Remove', trip_url(trip), method: 'delete', data: { confirm: "Do you really want to delete this trip?" } if current_user.present? && trip.userid == current_user.id %></br>

            </br>

          <%= link_to "Give Recommendations!", trip_recs_url(trip), class:"btn btn-primary" %>
    </div>

     <% end %>


           <!-- INDIVIDUAL TRIP IS ABOVE -->

          <!-- END OF LOOP END OF FEED DIV -->

</div>

