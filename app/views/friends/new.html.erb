<h1>New Friend</h1>


<%= form_tag(friends_url, method: 'post') do %>


  <div>
    <%= label_tag :f1 %><br />
    <%= number_field_tag :f1 %>
  </div>

  <div>
    <%= label_tag :f2 %><br />
    <%= number_field_tag :f2 %>
  </div>

  <div>
    <%= label_tag :confirmed %><br />
    <%= check_box_tag :confirmed? %>
  </div>


  <div>
    <%= submit_tag "Create Friend" %>
  </div>
<% end %>
